{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Compile code to main.exe",
      "command": "C:\\MinGW\\bin\\gcc.exe",
      "args": [
        "-O0",
        "-g",
        "${workspaceFolder}\\*.c",
        "${workspaceFolder}\\utilities\\*.c",
        "${workspaceFolder}\\models\\*.c",
        "-o",
        "${workspaceFolder}\\main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
